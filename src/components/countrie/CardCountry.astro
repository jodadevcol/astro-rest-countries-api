---
import type { CountryCard } from "@types-local/countries"

interface Props {
	country: CountryCard
}

const { country } = Astro.props
const { name, cca3, region, capital, population, flags } = country
---

<div class="h-full bg-white dark:bg-dark-100">
	<a href={`country/${cca3}`} class="relative max-w-full">
		<picture class="block overflow-hidden rounded-md" transition:name={`flag-image-${cca3}`}>
			<img src={flags.svg} alt="" class="aspect-video max-h-40 w-full object-cover" />
		</picture>
	</a>

	<div class="px-6 pb-10 pt-6 text-light-100 dark:text-white">
		<h2 class="mb-4 text-lg font-extrabold">{name.common}</h2>

		<div
			class="space-y-2 [&>div>span]:font-semibold [&>div]:text-sm [&>div]:font-light [&>div]:leading-4"
		>
			<div>
				<span>Population</span>: {population}
			</div>
			<div>
				<span>Region</span>: {region}
			</div>
			<div>
				<span>Capital</span>: {capital}
			</div>
		</div>
	</div>
</div>
