<header class="px-5 dark:bg-dark-100 lg:px-10">
	<div class="mx-auto max-w-screen-xl py-6">
		<div class="flex items-center justify-between">
			<a href="/" class="block text-white">
				<span class="text-2xl font-extrabold">Where in the world?</span>
			</a>

			<button class="inline-flex items-center space-x-2 text-white">
				<div class="h-5 w-5">
					<span class="icon-light hidden h-full w-full [&>svg]:h-full [&>svg]:w-full">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="size-6"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
							></path>
						</svg>
					</span>

					<span class="icon-dark block h-full w-full [&>svg]:h-full [&>svg]:w-full">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="currentColor"
							class="size-6"
						>
							<path
								fill-rule="evenodd"
								d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z"
								clip-rule="evenodd"></path>
						</svg>
					</span>
				</div>

				<span>Dark Mode</span>
			</button>
		</div>
	</div>
</header>
